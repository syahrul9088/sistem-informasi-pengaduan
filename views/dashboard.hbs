            <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
                {{#if stories}}
                <table class="table align-items-center mb-0">
                <thead>
                    <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-4">Isi Laporan</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">ID Laporan</th>
