                    <th class="text-secondary opacity-7"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each stories}}
                    <tr>
                    <td>
                        <h6 class="mb-0 text-xs ps-3">{{reports}}</h6>
                    </td>
                    <td> 
                        <h6 class="mb-0 text-xs">{{idReport}}</h6>
                    </td>
                    <td>
                        <h6 class="mb-0 text-xs">{{reportStatus}}</h6>  
                    </td>
                    <td>
                        <h6 class="mb-0 text-xs">{{createdAt}}</h6>
                    </td>
                    <td>
                        <div class="ms-auto text-end">
