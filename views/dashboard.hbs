            <h6>Table Laporan</h6>
            {{#if message}}
                <div class="alert alert-{{message.type}} alert-dismissible fade show w-25" role="alert">
                    <span class="alert-icon"><i class="ni ni-like-2"></i></span>
                    <span class="alert-text text-white"><strong>{{message.status}}</strong> {{message.message}}</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {{/if}}
